<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="20dp"
   android:background="@android:color/transparent"
    android:scrollbars="vertical"
    app:cardCornerRadius="0dp">

    <RelativeLayout

        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout

        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/viewmatch"
        android:background="@drawable/bg_item_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:textColor="#fff"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/font2"

            android:text="test2"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textSize="24sp"
            android:gravity="center"
            android:textAlignment="center"
            android:inputType="time"
            android:layout_gravity="center"
            android:id="@+id/TvRvMatchTime"
            />
        <LinearLayout

            android:layout_gravity="center"
            android:gravity="center"
            android:weightSum="3"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/team1Rvimg"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/barcelona"

                    app:civ_border_width="0dp"
                    app:civ_border_color="#FF000000"
                    />

                <TextView
                    android:layout_marginTop="20dp"
                    android:textColor="#fff"
                    android:id="@+id/team1Rvtv"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="loading.."
                    android:textAlignment="center"
                    android:textSize="12sp" />

                <TextView
                    android:layout_marginTop="20dp"
                    android:textColor="#fff"
                    android:id="@+id/team1RvResult"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="20sp" />
            </LinearLayout>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:text="VS"
                android:textColor="#fff"
                android:fontFamily="@font/font2"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="40sp"
                android:gravity="center"
                />

            <LinearLayout
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/team2Rvimg"
                    android:layout_width="100dp"
                    android:layout_height="100dp"

                    android:src="@drawable/paris"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="0dp" />

                <TextView
                    android:layout_marginTop="20dp"
                    android:textColor="#fff"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:id="@+id/team2Rvtv"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="loading.."
                    android:textSize="12sp"

                    />

                <TextView
                    android:layout_marginTop="20dp"
                    android:textColor="#fff"
                    android:id="@+id/team2RvResult"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/ballloding"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="left"
            android:src="@drawable/ball2"
            android:layout_alignParentBottom="true"
            android:layout_width="40dp"
            android:layout_height="40dp"></pl.droidsonroids.gif.GifImageView>
   <View
       android:layout_width="match_parent"
       android:layout_height="20dp"></View>
    </LinearLayout>
        <LinearLayout

            android:layout_below="@+id/viewmatch"

            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">
            <TextView
                android:textColor="#fff"

                android:visibility="gone"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:textSize="18sp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:text="test1"
                android:inputType="date"
                android:id="@+id/TvRvMatchDate"

                />

            <TextView
                android:textColor="#fff"
                android:background="#071C35"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:textSize="18sp"

                android:text="Camp Nou"
                android:inputType="date"
                android:id="@+id/match"

                />

        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>