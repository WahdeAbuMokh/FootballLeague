<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/table"
        android:orientation="vertical"
        android:stretchColumns="*">
    <TableRow android:id="@+id/rowkey" >


        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="9"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:id="@+id/team_name_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:gravity="center"
                android:text="Real Madrid"
                android:textAlignment="center"
                android:textColor="#111"
                android:textSize="13sp"
                android:textStyle="bold" />
            <TextView
                android:textColor="#111"
                android:id="@+id/mp"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_height="match_parent"
                android:text="MP"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_width="0dp"
                />
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textColor="#111"
            android:textAlignment="center"
            android:gravity="center"
            android:text="100"
            android:id="@+id/team_goalDifferance_tv"
            android:textSize="12sp"
            android:layout_height="match_parent"
            android:textStyle="bold"

            />
        <TextView
            android:layout_width="0dp"
            android:textColor="#111"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_height="match_parent"
            android:text="100"
            android:id="@+id/team_win_tv"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="0dp"
            android:textColor="#111"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_height="match_parent"
            android:text="100"
            android:id="@+id/team_draw_tv"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="0dp"
            android:textColor="#111"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_height="match_parent"
            android:text="100"
            android:id="@+id/team_lose_tv"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="0dp"
            android:textColor="#111"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_height="match_parent"
            android:text="100"
            android:id="@+id/team_points_tv"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_weight="1"
            />
        </LinearLayout>
    </TableRow>
    </TableLayout>
    <TextView
        android:layout_below="@+id/table"
        android:background="@drawable/hr_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>