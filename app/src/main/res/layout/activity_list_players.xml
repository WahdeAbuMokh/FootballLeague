<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bbb5"
    android:layout_height="match_parent"
    tools:context=".ListPlayers">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/team"
        android:src="@drawable/team1"
        android:layout_width="80dp"
        android:layout_height="80dp"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        android:textColor="#D2CA38"
        android:text="team"
        android:fontFamily="@font/font1"
        android:layout_toRightOf="@+id/team"
        android:id="@+id/nameteam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="50dp"
        android:layout_below="@+id/team"
        android:layout_marginBottom="?actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:id="@+id/Club_Players_recycle_view"/>

</RelativeLayout>